<?php
    session_start();
    if(isset($_SESSION["cadastros"])){
        $cadastros = $_SESSION["cadastros"];
        
        foreach($cadastros as $id => $produtos){
            if($produtos != null){ 
            echo "[$id] =>" . $produtos["nome"] .  "<br/>";
            }
        }
        
        
    }
    
    else{
        echo "Não existem produtos cadastrados";
    }
?>

